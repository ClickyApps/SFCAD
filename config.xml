<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "com.carecouncilwales.app"
  version     = "1.1.0">

  <name>SfCaD</name>

  <description>
  	description
  </description>

  <author href="http://www.clicky.co.uk" email="josh@clicky.co.uk">
	  Clicky Media
  </author>

  <preference name="orientation"              value="portrait" />
  <preference name="target-device"            value="universal" />
  <preference name="fullscreen"               value="true" />
  <preference name="disable-cursor"           value="true" />
  <preference name="android-installLocation"  value="auto" />
  
  <gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" overwrite="true">
    <array>
        <string>UIInterfaceOrientationLandscapeOmg</string>
    </array>
  </gap:config-file>
  
  <access origin="*" />
  
  <preference name="permissions" value="none"/>
  
  <gap:splash src="splash.png" />
  
  <icon src="pg/icon.png" gap:platform="ios" width="57" height="57" />
  <icon src="pg/icon72.png" gap:platform="ios" width="72" height="72" />
  <icon src="pg/icon114.png" gap:platform="ios" width="114" height="114" />
  
  <gap:splash src="splash/ios/Default.png" width="320" height="480" />
  <gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
  <gap:splash src="splash/ios/Default-568h@2x.png" width="642" height="962" />
  <gap:splash src="splash/ios/Default-Portrait.png" width="768" height="1024" />
  
</widget>